{
	"compilerOptions": {
		"target": "ES2018",
		"module": "ESNext",
		"moduleResolution": "Node",
		"lib": [
			"ESNext",
			"ESNext.AsyncIterable",
			"DOM"
		],
		"esModuleInterop": true,
		"allowJs": true,
		"sourceMap": true,
		"strict": true,
		"noEmit": true,
		"experimentalDecorators": true,
		"baseUrl": ".",
		"paths": {
			"~/*": [
				"./*"
			],
			"@/*": [
				"./*"
			]
		},
		"types": [
			"@nuxt/types",
			"@nuxt/content",
			"@nuxtjs/axios",
			"@types/node",
			"@types/moment-jalaali",
			"@types/uuid",
			"./types/shims.d.ts",
			"./types/svg.d.ts",
			"./types/vue.d.ts",
		]
	},
	"exclude": [
		"node_modules",
		".nuxt",
		"dist"
	]
}
